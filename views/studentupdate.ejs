                    <input type="text" name="firstName"><br>
                    <p>Last name : <br></p>
                    <input type="text" name="lastName"><br>
                    <p>Birthday : <br></p>
                    <input type="text" name="birthday"><br>
                    <p>Email : <br></p>
                    <input type="text" name="email"><br>
                    <p>Gender : <br></p>
                    <input type="text" name="gender"><br>
                    <br>
                    <div id="submit">
                        <input type="submit" value="submit" >
                    </div>
                    <div id="notif">
                    </div>
                </div>
            </form>
        </div>
    </div>
</body>
</html>