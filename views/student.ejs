<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Student</title>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" type="text/css" media="screen" href="main.css" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <script src="main.js"></script>
</head>
<body><br>
    <div class="container" style="text-align: right">
    <div class="container" style="text-align: center">
            <h1>Student Data</h1>
            <a href="/student/add" class="badge badge-primary">Add Student</a>
            <br><br>
            <div class="container">
            <table class="table">
                <thead>
                    <tr>
                    <th scope="col">No</th>
                    <th scope="col">First</th>
                    <th scope="col">Last</th>
                    <th scope="col">Email</th>
                    <th scope="col">Options</th>
                    </tr>
                </thead>
                <tbody>
                    <% dataStudent.forEach((student) => { %>
                    <tr>
                    <td><%=student.id %></td>
                    <td><%=student.firstName %></td>
                    <td><%=student.lastName %></td>
                    <td><%=student.email %></td>
                    <td><a href="/student/edit/<%=student.id%>" class="badge badge-info">Edit</a>  <a href="/student/delete/<%=student.id%>" class="badge badge-info">Delete</a> </td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            </div><br>
        </div> 
            <a href="/" class="badge badge-primary">Back</a> 
    </div>
    
</body>
</html>