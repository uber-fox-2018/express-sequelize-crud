<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Student Page</title>
</head>
<body>
    <h1 style="text-align: center">Student Data</h1>
    <a href="/students/add"><h3 style="text-align: center">Add Student</h3></a>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>Id</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Email</th>
                <th>Options</th>
            </tr>
        </thead>
        <tbody>
            <% data_students.forEach(students => { %>
                <tr>
                    <td><%= students.id %></td>
                    <td><%= students.first_name %></td>
                    <td><%= students.last_name %></td>
                    <td><%= students.email %></td>
                    <td><a href="/students/edit/<%=students.id%>">Edit</a> <a href="/students/delete/<%=students.id%>"> | Delete</a></td>
                </tr>
            <% })%>
        </tbody>
    </table>
    <br>
    <button class="btn btn-dark"><a href="/">Back to Home</a></button>
</body>
</html>