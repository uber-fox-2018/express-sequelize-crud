<% include partials/header %>

<h1> Edit Teacher Data </h1>
<p> <a href="/teachers">show all data</a> </p>
<div>
    <% if(teacher!==null){ %>
        <form action="/teachers/edit/<%= teacher.id %>" method="POST">
            <label for="fName">First Name</label>
            <input type="text" name="first_name" id="fName" value="<%= teacher.first_name %>" required> <!-- name="first_name is the name attribute that we set on the input -->
            <br>
            <label for="lName">Last Name</label>
            <input type="text" name="last_name" id="lName" value="<%= teacher.last_name %>" required>
            <br>
            <input type="submit" value="Edit Teacher">
        </form>
    <% }else{ %>
        <h3>Ooopss..The id is not found</h3>
    <% } %>
</div>

<% include partials/footer %>